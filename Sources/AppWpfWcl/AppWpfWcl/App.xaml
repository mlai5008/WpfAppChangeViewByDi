<Application
    x:Class="AppWpfWcl.App"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="clr-namespace:AppWpfWcl"
    xmlns:viewModels="clr-namespace:AppWpfWcl.ViewModels"
    xmlns:views="clr-namespace:AppWpfWcl.Views">
    <Application.Resources>
        <DataTemplate DataType="{x:Type TypeName=viewModels:AuthorizationViewModel}">
            <views:AuthorizationView />
        </DataTemplate>
        <DataTemplate DataType="{x:Type TypeName=viewModels:UserViewModel}">
            <views:UserView />
        </DataTemplate>
        <DataTemplate DataType="{x:Type TypeName=viewModels:DeveloperViewModel}">
            <views:DeveloperView />
        </DataTemplate>
        <DataTemplate DataType="{x:Type TypeName=viewModels:LoginViewModel}">
            <views:LoginView />
        </DataTemplate>
        <DataTemplate DataType="{x:Type TypeName=viewModels:LogOutViewModel}">
            <views:LogOutView />
        </DataTemplate>
    </Application.Resources>
</Application>
